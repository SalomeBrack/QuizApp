@model QuizApp.Models.Question

<form method="post" asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-row">
        <input asp-for="Quest" class="form-control" placeholder="Question" />
        <span asp-validation-for="Quest" class="text-danger"></span>
    </div>

    <div class="form-row">
        <div class="form-group col-md-3">
            <input asp-for="Answ0" class="form-control" placeholder="Correct Answer" />
            <span asp-validation-for="Answ0" class="text-danger"></span>
        </div>
        <div class="form-group col-md-3">
            <input asp-for="Answ1" class="form-control" placeholder="Wrong Answer" />
            <span asp-validation-for="Answ1" class="text-danger"></span>
        </div>
        <div class="form-group col-md-3">
            <input asp-for="Answ2" class="form-control" placeholder="Wrong Answer" />
            <span asp-validation-for="Answ2" class="text-danger"></span>
        </div>
        <div class="form-group col-md-3">
            <input asp-for="Answ3" class="form-control" placeholder="Wrong Answer" />
            <span asp-validation-for="Answ3" class="text-danger"></span>
        </div>
    </div>

    <div class="form-row">
        <input asp-for="Quiz" class="form-control" placeholder="QuizId" />
        <span asp-validation-for="Quiz" class="text-danger"></span>
    </div>

    <div class="form-row">
        <button asp-action="Index" class="btn btn-secondary col-md-6">Cancel &nbsp;<i class="fas fa-times"></i></button>
        <button type="submit" class="btn btn-dark col-md-6">Add &nbsp;<i class="fas fa-check"></i></button>
    </div>
</form>