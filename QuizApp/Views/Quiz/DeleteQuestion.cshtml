@model QuizApp.Models.Question
@{ ViewData["Title"] = "Delete Question"; }

<h4>
    <a asp-route-Id="@Model.QuizId" asp-action="Edit" class="btn btn-light badge"><i class="fas fa-arrow-left"></i></a>
    Delete Quiz
</h4>

<p class="alert-danger">Are you sure you want to delete this question?</p>

<form method="post" asp-action="DeleteQuestionPost">
    <input asp-for="Id" hidden />

    <div class="form-row">
        <a asp-route-Id="@Model.QuizId" asp-action="Edit" class="btn btn-secondary col-md-6">Cancel &nbsp;<i class="fas fa-times"></i></a>
        <button type="submit" class="btn btn-danger col-md-6">Delete &nbsp;<i class="fas fa-trash"></i></button>
    </div>
</form>