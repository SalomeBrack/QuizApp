@model QuizApp.Models.Quiz
@{
    ViewData["Title"] = "Delete";
}

<h1>Delete Quiz</h1>

<form method="post" asp-action="DeletePost">
    <input asp-for="Id" hidden />

    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" disabled />
    </div>

    <div class="form-group">
        <label asp-for="Type"></label>
        <input asp-for="Type" class="form-control" disabled />
    </div>

    <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-arrow-left"></i></a>
    <button type="submit" class="btn btn-danger"><i class="fas fa-trash"></i></button>
</form>