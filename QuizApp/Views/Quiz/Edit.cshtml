@model QuizApp.Models.Quiz
@{ ViewData["Title"] = Model.Title; }

<h4>
    <a asp-route-Id="@Model.Id" asp-action="Play" class="btn btn-light badge"><i class="fas fa-arrow-left"></i></a>
    Quiz Editor
</h4>

<form method="post" asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-row">
        <div class="form-group col-md-9">
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="form-group col-md-3">
            <select asp-for="Type" class="form-control">
                <option value="0">Knowledge</option>
                <option value="1">Personality</option>
                <option value="2">Poll</option>
            </select>
            <span asp-validation-for="Type" class="text-danger"></span>
        </div>
    </div>

    <div>

    </div>

    <div class="form-row">
        <a asp-route-Id="@Model.Id" asp-action="Delete" class="btn btn-danger col-md-6">Delete Quiz &nbsp;<i class="fas fa-trash"></i></a>
        <button type="submit" class="btn btn-dark col-md-6">Save Changes &nbsp;<i class="fas fa-check"></i></button>
    </div>
</form>