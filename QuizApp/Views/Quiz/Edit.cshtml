@model QuizApp.Models.Quiz
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Quiz</h1>

<form method="post" asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Type"></label>
        <input asp-for="Type" class="form-control" />
        <span asp-validation-for="Type" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Creator"></label>
        <input asp-for="Creator" class="form-control" />
        <span asp-validation-for="Creator" class="text-danger"></span>
    </div>

    <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-arrow-left"></i></a>
    <button type="submit" class="btn btn-primary"><i class="fas fa-check"></i></button>
</form>