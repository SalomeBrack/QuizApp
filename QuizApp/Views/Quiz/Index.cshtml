@model IEnumerable<QuizApp.Models.Quiz>
@{ ViewData["Title"] = "QuizApp"; }

@if (Model.Count() > 0)
{
    @foreach (var obj in Model)
    {
        <a class="btn btn-light btn-lg btn-block text-left" asp-route-Id="@obj.Id" asp-action="Play">
            <div class="dropleft">
                @{ int type = (int)obj.Type; }
                @if (type == 0) { <i class="fas fa-brain"></i> }
                else if (type == 1) { <i class="fas fa-smile"></i> }
                else if (type == 2) { <i class="fas fa-chart-pie"></i> }
                &nbsp; @obj.Title
            </div>
        </a>
    }
}
else
{
    <p>No quiz exists.</p>
}
