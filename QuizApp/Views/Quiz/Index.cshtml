@model IEnumerable<QuizApp.Models.Quiz>
@{
    ViewData["Title"] = "Quiz";
}

<h1>Quiz List</h1>

<a asp-controller="Quiz" asp-action="Create" class="btn btn-primary">
    <i class="fas fa-plus"></i> &nbsp; Create New Quiz
</a>

@if (Model.Count() > 0)
{
    <table class="table">
        <thread>
            <tr>
                <th>Name</th>
                <th>Type</th>
                <th>Creator</th>
                <th></th>
            </tr>
        </thread>
        <tbody>
            @foreach (var obj in Model)
            {
            <tr>
                <td>@obj.Name</td>
                <td>@obj.Type</td>
                <td>@obj.Creator</td>
                <td>
                    <a class="btn btn-primary" asp-route-Id="@obj.Id" asp-action="Edit"><i class="fas fa-pen"></i></a>
                    <a class="btn btn-danger" asp-route-Id="@obj.Id" asp-action="Delete"><i class="fas fa-trash"></i></a>
                </td>
            </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No quiz exists.</p>
}
