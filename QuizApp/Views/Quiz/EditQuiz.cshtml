@model QuizApp.Models.Quiz

<form method="post" asp-action="EditQuiz">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-row">
        <h4 class="col-md-8"><i class="fas fa-pen"></i> Quiz Creator</h4>
        <a asp-route-Id="@Model.Id" asp-action="DeleteQuiz" class="btn btn-secondary col-md-2">Delete Quiz &nbsp;<i class="fas fa-trash"></i></a>
        <button type="submit" class="btn btn-dark col-md-2">Save Changes &nbsp;<i class="fas fa-check"></i></button>
    </div><br />

    <div class="form-row">
        <div class="form-group col-md-9">
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="form-group col-md-3">
            <select asp-for="Type" class="form-control">
                <option value="0">Knowledge</option>
                <option value="1">Personality</option>
                <option value="2">Poll</option>
            </select>
            <span asp-validation-for="Type" class="text-danger"></span>
        </div>
    </div>
</form>