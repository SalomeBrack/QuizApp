@model QuizApp.Models.Quiz
@{ ViewData["Title"] = "Quiz Creator"; }

<form method="post" asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-row">
        <h4 class="col-md-10"><i class="fas fa-pen"></i> Quiz Creator</h4>
        <a asp-action="Index" class="btn btn-secondary col-md-2">Cancel &nbsp;<i class="fas fa-times"></i></a>
    </div><br />

    <div class="form-row">
        <div class="form-group col-md-9">
            <input asp-for="Title" class="form-control" placeholder="Title" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="form-group col-md-3">
            <select asp-for="Type" class="form-control">
                <option hidden selected>Type</option>
                <option value="0">Knowledge</option>
                <option value="1">Personality</option>
                <option value="2">Poll</option>
            </select>
            <span asp-validation-for="Type" class="text-danger"></span>
        </div>
    </div><br />

    <div class="form-row">
        <button type="submit" class="btn btn-dark col-md-12">Create Quiz &nbsp;<i class="fas fa-plus"></i></button>
    </div>
</form>